pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'chmod +x ./gradlew'
                sh './gradlew bootJar'
            }
        }
        stage('docker build'){
            steps{
                script{
                    docker.build('maple-service')
                }
            }
        }

        stage('docker run'){
            steps{
                sh 'docker ps -f name=maple-service -q | xargs --no-run-if-empty docker container stop'
                sh 'docker container ls -a -f name=maple-service -q | xargs -r docker container rm'
                sh 'docker images --no-trunc --all --quiet --filter="dangling=true" | xargs --no-run-if-empty docker rmi'
                sh 'docker run -d --name maple-service --net app-tier -p 8081:8081 maple-service:latest'
            }
        }

    }
}